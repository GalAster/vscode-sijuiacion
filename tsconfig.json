{
    "compilerOptions": {
        "outDir": "dist",
        "target": "ES5",
        "module": "commonjs",
        "lib": [
            "esnext",
            "dom"
        ],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "removeComments": true,
        "strict": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
    },
    "include": [
        "extension",
        "syntaxes/index.ts"
    ]
}